%!PS-Adobe-3.0
%%BoundingBox: 0 0 400 400

/mm { 72 25.4 div mul } bind def

/axis-mount-r 22.3 mm 2 div def
/axis-r 8.5 mm 2 div def
/mount-dist 31 mm 2 div def
/screw-r 3.2 mm 2 div def

0 setlinewidth

% x y r
/circle {
    /rr exch def
    moveto
    currentpoint
    rr 0 rmoveto
    rr 0 360 arc
} def

/box {
  /h exch def
  /w exch def

  w 0 rlineto
  0 h rlineto
  w neg 0 rlineto
  0 h neg rlineto
  closepath
  stroke
} def

/motor {
    0 0 axis-mount-r circle

    mount-dist neg mount-dist neg screw-r circle
    mount-dist mount-dist neg screw-r circle
    mount-dist neg mount-dist screw-r circle
    mount-dist mount-dist screw-r circle

    stroke
} def

/axis {
    0 0 axis-r circle
    stroke
} def

60 mm 60 mm translate
0 0 moveto

-45 mm 0 moveto 90 mm 60 mm box

% left holes
-45 mm 7.5 mm add 10 mm screw-r circle
-45 mm 7.5 mm add 50 mm screw-r circle
-45 mm 7.5 mm add 30 mm screw-r circle

% right holes
45 mm 7.5 mm sub 10 mm screw-r circle
45 mm 7.5 mm sub 50 mm screw-r circle
45 mm 7.5 mm sub 30 mm screw-r circle

% bottom holes
0 mm 7.5 mm screw-r circle
-20 mm 7.5 mm screw-r circle
20 mm 7.5 mm screw-r circle

% demo
%-30 mm 0 moveto 60 mm 15 mm box
%-45 mm 0 moveto 15 mm 60 mm box
%30 mm 0  moveto 15 mm 60 mm box

%0 15 mm 42.3 mm 2 div add translate motor
0 15 mm 42.3 mm 2 div add translate axis

showpage
