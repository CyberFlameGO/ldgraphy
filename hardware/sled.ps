%!PS-Adobe-3.0
%%BoundingBox: 0 0 600 600

/mm { 72 25.4 div mul } bind def

/screw-r 3.1 mm 2 div def
/slot-l 3 mm def

% x y
/screw {
    moveto
    currentpoint
    screw-r 0 rmoveto
    screw-r 0 360 arc
} def

/box {
  /h exch def
  /w exch def

  w 0 rlineto
  0 h rlineto
  w neg 0 rlineto
  0 h neg rlineto
  closepath
  stroke
} def

0 setlinewidth

20 mm 20 mm translate

% sled
0 0 moveto 150 mm 90 mm box

30 mm 7.5 mm screw
150 mm 30 mm sub 7.5 mm screw

45 mm screw-r sub               7.5 mm 15 mm add slot-l 2 div sub moveto
screw-r 2 mul screw-r slot-l add box

150 mm 45 mm sub screw-r sub    7.5 mm 15 mm add slot-l 2 div sub moveto
screw-r 2 mul screw-r slot-l add box

30 mm 90 mm 7.5 mm sub screw
150 mm 30 mm sub 90 mm 7.5 mm sub screw

45 mm 90 mm 7.5 mm sub 15 mm sub screw
150 mm 45 mm sub 90 mm 7.5 mm sub 15 mm sub screw

stroke

% sled movement thingies
/sled-lock {
    15 mm 30 mm box
    7.5 mm 7.5 mm screw
    7.5 mm 30 mm 7.5 mm sub screw
    stroke
} def

gsave 152 mm 0 translate 0 0 moveto sled-lock grestore
gsave 152 mm 31 mm translate 0 0 moveto sled-lock grestore
gsave 152 mm 62 mm translate 0 0 moveto sled-lock grestore

gsave 168 mm 0 translate 0 0 moveto sled-lock grestore
gsave 168 mm 31 mm translate 0 0 moveto sled-lock grestore
gsave 168 mm 62 mm translate 0 0 moveto sled-lock grestore

showpage
